---
import { analytics } from '@/settings'

interface Props {
  class?: string;
}

const { class: className = '' } = Astro.props;
---

{analytics.counterapi.enabled && (
  <div class={`counter-api ${className}`}>
    <div class="flex items-center gap-2 text-sm text-base-content/70">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
      </svg>
      <span>访问量:</span>
      <span id="counter-display">加载中...</span>
    </div>
  </div>
)}

<script define:vars={{ analytics }}>
  async function updateCounter() {
    if (!analytics.counterapi.enabled) return;
    
    try {
      const response = await fetch(`https://api.counterapi.dev/v1/${analytics.counterapi.workspace}/${analytics.counterapi.counter}/up`, {
        method: 'GET'
      });
      
      if (response.ok) {
        const data = await response.json();
        const counterDisplay = document.getElementById('counter-display');
        if (counterDisplay && data.count !== undefined) {
          counterDisplay.textContent = data.count.toString();
        }
      } else {
        console.error('Counter API request failed:', response.status);
        const counterDisplay = document.getElementById('counter-display');
        if (counterDisplay) {
          counterDisplay.textContent = '--';
        }
      }
    } catch (error) {
      console.error('Counter API error:', error);
      const counterDisplay = document.getElementById('counter-display');
      if (counterDisplay) {
        counterDisplay.textContent = '--';
      }
    }
  }

  // 页面加载时更新计数器
  document.addEventListener('DOMContentLoaded', updateCounter);
</script>

<style>
  .counter-api {
    display: inline-block;
  }
  
  #counter-display {
    font-weight: 500;
    color: var(--color-primary, #0066cc);
  }
</style>